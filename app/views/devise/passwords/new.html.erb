<div class="container-fluid" id="password-reset-wrapper-div">
	<div class="row" style="height: 70vh;">
		<div class="col-md-4 mx-auto my-auto">
			<h4 class="bold text-white text-center mb-5">Forgot your password?</h4>
			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  	<%= f.error_notification %>
		    <%= f.input :email, required: true %>
		    <%= f.submit "Send me reset password instructions", id: "signup-button", style: "font-size: 0.6em;" %>
			<% end %>
			<div style="font-size: 0.8em;">
        <%= render "devise/shared/links" %>
      </div>
		</div>
	</div>
</div>

